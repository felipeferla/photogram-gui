<h1> <%= @the_user.username%> </h1>

<dl>
  <dt> ID </dt>

  <dd> <%= @the_user.id %> </dd>
  <dt> Edit user </dt>
  <dd> <form action="/add_user" method="post">
      <label for="username">Photo ID</label>
      <input id="username type="text" name="input_username" placeholder = "Enter a username...">
      <button> Add user </button>  </dd>

</dl>

<h2> Own photos </h2>

<table border = "1">
  <tr>
    <th> Image </th>
    <th> Owner </th>
    <th> Caption </th>
    <th> Posted </th>
    <th></th>
  </tr>
  <% @the_user.own_photos.each do |a_photo| %>
    <td>
      <img src = "<%= a_photo.image%>" >
    </td>
    <td> <%= a_photo.poster.username %> </td>
    <td> <%= a_photo.caption%> </td>
    <td> <%= a_photo.created_at%> </td>
    <td> Show details </td>

  </tr>
<% end %>
</table>
